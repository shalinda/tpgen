import { Injectable } from '@angular/core';
import { HttpClient, HttpHeaders } from '@angular/common/http';

import { Observable, of } from 'rxjs';
import { catchError, map, tap } from 'rxjs/operators';

import { ${className} } from '../model/${objectName}';
import { API_URI } from '../config/const';

const httpOptions = {
  headers: new HttpHeaders({ 'Content-Type': 'application/json'})
};

@Injectable({
  providedIn: 'root'
})
export class ${className}Service {

  private url = `${API_URI}/${objectName}s`;  // URL to web api

  constructor(private http: HttpClient) { }

    getDummy${className}(): ${className} {
      return {
        _id: '',
#foreach ($col in $cols)
  $col.varName: '',  
#end
//        empType: { _id: '', name: '' }
      };
    }

    add${className} (${objectName}: ${className}): Observable<${className}> {      
      return this.http.post<${className}>(this.url, ${objectName}, httpOptions)      
    }

    update${className} (${objectName}: ${className}): Observable<${className}> {      
      return this.http.put<${className}>(this.url, ${objectName}, httpOptions)      
    }

    delete${className}(${objectName}: ${className}) {
      //if (${objectName}._id == null) return ${objectName};
      const url = `${this.url}/${${objectName}._id}`;
      return this.http.delete(url)      
    }

     /** GET hero by id. Will 404 if id not found */
    get${className}(name: String): Observable<${className}> {
      const url = `${this.url}/${name}`;
      return this.http.get<${className}>(url)
    }

    get${className}s(pageNum: number, limit: number): Observable<{${objectName}s: any[], count: number, page: number, pages: number }> {      
      const url = (pageNum) ? `${API_URI}/${objectName}s?page=${pageNum}` : `${API_URI}/${objectName}s`;

      return this.http.get<{ ${objectName}s: any[], count: number, page: number, pages: number}>(url);
    }
  
}
